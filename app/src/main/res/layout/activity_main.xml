<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Temperature Control"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="50dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seekbarview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust Temperature:"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="273dp" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="229dp"
                    android:layout_height="67dp"
                    android:max="100"
                    android:progress="5"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="106dp" />

            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Temperature:"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="273dp" />

                <EditText
                    android:id="@+id/current_view"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="261dp" />

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Error Temperature:      "
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="273dp" />

                <EditText
                    android:id="@+id/errortemp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="261dp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mvout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MV Output:           "
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="273dp" />

                <EditText
                    android:id="@+id/mvouttemp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="261dp" />

            </LinearLayout>
        </TableRow>





        <TableRow
            android:layout_width="match_parent"
            android:layout_height="506dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/on"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text=" CONTROL ON"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="213dp"
                    tools:layout_editor_absoluteY="459dp" />

                <Button
                    android:id="@+id/off"
                    android:layout_width="200dp"
                    android:layout_height="64dp"
                    android:text="CONTROL OFF"
                    app:backgroundTint="#BA5050"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="213dp"
                    tools:layout_editor_absoluteY="459dp" />


            </LinearLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>